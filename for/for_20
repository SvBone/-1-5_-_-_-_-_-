#include <iostream>
using namespace std;
/*Дано целое число N (> 0). Используя один цикл, найти сумму
1! + 2! + 3! + . . . + N!
(выражение N! — N–факториал — обозначает произведение всех целых
чисел от 1 до N :
N! = 1·2·. . .·N). Чтобы избежать целочисленного пере-
полнения, проводить вычисления с помощью вещественных переменных
и вывести результат как вещественное число.*/
int main()
{
	double n; cin >> n;
	double s = 0,
		jit = 1;
	for (int i = 1; i < n + 1; i++)
	{
		for (int j = 1; j <= i; j++)
		{
			jit *= j;
		}
		s += jit;
		jit = 1;
	}
	cout << s << endl;	
	system("pause");
	return 0;
}
